{
  "name": "vsread",
  "displayName": "vsread",
  "description": "A text reader extension for VS Code that supports .epub and .txt formats. 这是一个文本阅读器，支持epub和txt格式。",
  "author": "Peanut",
  "publisher": "vsread",
  "version": "1.0.5",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:mySidebarView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "my-sidebar",
          "title": "VsRead",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "my-sidebar": [
        {
          "id": "vsread",
          "name": "VsRead",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "vsread.openFile",
        "title": "打开文件"
      },
      {
        "command": "vsread.toggleBossKey",
        "title": "切换老板键"
      }
    ],
    "keybindings": [
      {
        "command": "vsread.toggleBossKey",
        "key": "cmd+shift+space",
        "mac": "cmd+shift+space",
        "when": "viewItem == vsread || view == vsread"
      }
    ],
    "filters": {
      "所有支持的格式": [
        "txt",
        "epub"
      ],
      "文本文件": [
        "txt"
      ],
      "电子书": [
        "epub"
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/html-to-text": "^9.0.4",
    "@types/node": "^22.13.5",
    "@types/vscode": "^1.75.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "epub": "^1.3.0",
    "html-to-text": "^9.0.5",
    "pdf-parse": "^1.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/isnl/vsread.git"
  }
}